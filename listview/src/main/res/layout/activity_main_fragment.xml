<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical">
    <RadioGroup
        android:id="@+id/rad_dialog_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rad_alert_dialog"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alert_dialog"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rad_date_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date_dialog"/>
        <RadioButton
            android:id="@+id/rad_time_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time_dialog"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_create_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建Dialog"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000fff"/>

</LinearLayout>
